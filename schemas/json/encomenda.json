{
    "$id": "https://datagen.di.uminho.pt/schemas/encomenda",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
  
    "type": "object",
    "properties": {
      	"estado": { "enum": ["Sem stock", "A caminho da loja", "Por levantar"] },
        "data_entrega": { "type": "string", "_datagen": "date('20-07-2022','23-07-2022','DD-MM-AAAA')" },
        "localizacao_atual": { "type": "string", "_datagen": "position" },
        "produto": { "$ref": "/schemas/produto" },
        "cliente": { "$ref": "/schemas/cliente" }
    },
    "required": ["estado", "data_entrega", "localizacao_atual", "produto", "cliente"]
}